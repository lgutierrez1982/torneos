<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="Torneos" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.cpt.torneo.entities.Persona</class>
		<class>com.cpt.torneo.entities.Juego</class>
		<class>com.cpt.torneo.entities.PersonaJuegos</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="todouserdb" />
			<property name="javax.persistence.jdbc.password" value="passtodouserdb" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/torneos" />
		</properties>
	</persistence-unit>
</persistence>
